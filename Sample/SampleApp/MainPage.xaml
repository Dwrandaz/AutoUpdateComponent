<Page
    x:Class="SampleApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SampleApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Center" Spacing="10">
            <TextBlock x:Name="versionTextBlock" FontSize="32" HorizontalAlignment="Center" />
            <TextBlock x:Name="statusTextBlock" FontSize="20" HorizontalAlignment="Center" Margin="0, 10" />

            <Button x:Name="updateButton" HorizontalAlignment="Center" Content="Update" Click="UpdateButton_Click" Width="100" />
            <Button x:Name="installButton" HorizontalAlignment="Center" Content="Install" Click="installButton_Click" Width="100" />
            <Button x:Name="removeButton" HorizontalAlignment="Center" Content="Remove" Click="removeButton_Click" Width="100" />
        </StackPanel>

        <TextBox x:Name="logTextBox" Grid.Row="1" AcceptsReturn="True" />
    </Grid>
</Page>
